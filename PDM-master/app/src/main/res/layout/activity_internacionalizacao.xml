<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/helloWorldLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Internacionalizacao">

    <TextView
        android:id="@+id/countryTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="@color/welcome_text_color"
        android:textSize="@dimen/textview_fontsize"
        tools:text="@string/textview_country" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/imageview_width"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/bandeira_name"
        app:srcCompat="@drawable/imagem_bandeira" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/imageview_width"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/comida_tipica"
        app:srcCompat="@drawable/imagem_comida" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/nome_comida"
        android:textColor="@color/welcome_text_color"
        android:textSize="@dimen/textview_fontsize" />

</LinearLayout>